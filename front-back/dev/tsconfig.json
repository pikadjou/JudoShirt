{
    "version": "1.7.3",
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "Scripts",
        "sourceMap": true,
        "module": "none",
        "declaration": false,
        "noImplicitAny": false,
        "noResolve": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "filesGlob": [
        "./typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}